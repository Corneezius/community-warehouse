<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <meta charset="utf-8">
        <title>Community Warehouse: Items</title>
    </head>
    <body>
        <div class="container">
            <h1> Items </h1>
            <a href="/"><p>Go Back to Main Page</p></a>
            <div class="row">
                <div class="col-md-6">
                    <div class="jumbotron form-group">
                        <h3>Offer your items to share:</h3>
                        <form action="/item_create" method="post">
                            <input name="owner_id" type="hidden" value="{{given_member.getId}}">
                            <input name="status" type="hidden" value="true">
                            <label for="item_name">Item name:</label>
                            <input id="item_name" name="item_name" type="text" required class="form-control"><br>
                            <label class="btn-bs-file">Upload Image</label>
                            <input type="file" name="image"><br>
                            <button class="btn btn-success" type="submit">Share</button><br>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="jumbotron">
                        <h2>Currently available items you can borrow: </h2>
                        {% if current_items is not empty %}
                        {% for item in current_items %}
                        <li><a href="/member{{item.getId}}">{{item.getName}}</a></li>
                        {% endfor %}<br>
                        <a href="/delete_all_items" type="button" class="btn btn-danger">Delete All</a>
                        {% else %}
                        <h4>There are no items yet</h4>
                        <img src="/img/naan.jpg" class="img-responsive">
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
